/**index.wxss**/

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.date{
  text-align: center;
}
.temperature{
  font-size: 250rpx;
  text-align:center;
}

.city{
  font-size: 50rpx;
  text-align:center;
}
.weather{
  font-size: 50rpx;
  text-align:center;
}
.moreinfo{
  width: 18%;
  margin-top: 5rpx;
  background-color: #4dae71;
  color: #000000;
}

.placeholder{
    margin: 5px;
    padding: 0 10px;
    text-align:center;
    background-color: #EBEBEB;
    height: 4.6em;
    line-height: 2.3em;
    color: #000000;
}

.placeholder_1{
    margin: 5px;
    padding: 0 10px;
    text-align:center;
    height: 3em;
    line-height: 3em;
    color: #000000;
}

.location_button{
  width: 38rpx;
  height: 38rpx;
  text-align: center;
  background-size: 38rpx 38rpx;
  background-repeat:no-repeat;
  border:none;
}

.wheather_info{
  font-size: 70rpx;
  text-align:center;
  }

.nowinfo {
  display: flex;
  margin-left: 22px;
  flex-direction: column;
  align-items: center;
}

.nowinfo-icon {
  width: 110rpx;
  height: 110rpx;
  margin: -20rpx 20rpx;
  align-items: center;
}